@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
    <h3 class="text-center">CREATE A RESTAURANT</h3>

    <form action="" method="post">
        <div class="form-group">
            <label for="formGroupExampleInput">Name</label>
            <input type="text" name="Name" class="form-control" placeholder="Write Name" />
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Email</label>
            <input type="text" name="Email" class="form-control" placeholder="Write Email" />
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput3">Phone</label>
            <input type="text" name="Phone" class="form-control" placeholder="Write Phone Number" />
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput4">Address</label>
            <input type="text" name="Address" class="form-control" placeholder="Write Address" />
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput5">Password</label>
            <input type="password" name="Password" class="form-control" placeholder="Write Password" />
        </div>
        <input type="submit" value="Create" class="btn btn-outline-success" />
        <a href="/Restaurant/Index" class="btn btn-danger">Back</a>
    </form>

</body>
</html>
