@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
    <h3 class="text-center">CREATE A FOOD</h3>

    <form action="" method="post">
        <div class="form-group">
            <label for="formGroupExampleInput">NAME</label>
            <input type="text" name="Name" class="form-control" placeholder="Write Name" />
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">ROTTEN TIME</label>
            <input type="text" name="RottenTime" class="form-control" placeholder="Write Rotten Date And Time Like mm-dd-yyyy 00:00" />
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput3">LAST TIME FOR COLLECT</label>
            <input type="text" name="LastTimeForCollect" class="form-control" placeholder="Write Collect Date And Time Like mm-dd-yyyy 00:00" />
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput4">QUANTITY</label>
            <input type="text" name="Qty" class="form-control" placeholder="Write Quantity" />
        </div>
        <div class="form-group">
            <input type="hidden" name="Email" value="@Session["Email"]" />
        </div>
        <input type="submit" value="Create" class="btn btn-outline-success" />
        <a href="/Food/Index" class="btn btn-danger">Back</a>
    </form>

</body>
</html>
