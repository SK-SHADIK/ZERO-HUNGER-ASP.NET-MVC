@{
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

@if (TempData["msg"] != null)
{

    <div class="alert alert-info">@TempData["msg"]</div>
}
<h4>You Are Login As</h4>
<h5 class="text-success">@Session["Name"]</h5>
<a href="/Login/Index" class="btn btn-danger">LOG OUT</a>

<h2 class="text-center">RESTAURANT DETAILS</h2>
<a href="/Restaurant/Create" class="btn btn-info">ADD A RESTAURANT</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Password</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var res in Model)
        {
            <tr>

                <td>@res.Id</td>
                <td>@res.Name</td>
                <td>@res.Email</td>
                <td>@res.Phone</td>
                <td>@res.Address</td>
                <td>@res.Password</td>
                <td><a href="/Restaurant/Edit/@res.Id" class="btn btn-info">Edit</a></td>
                <td><a href="/Restaurant/Delete/@res.Id" class="btn btn-info">Delete</a></td>
            </tr>

        }

    </tbody>
</table>

